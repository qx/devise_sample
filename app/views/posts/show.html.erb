<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<ul id="items"></ul>
<script type="text/javascript">
  function initialize(){
    var source = new EventSource('/events');
    source.addEventListener('mydata', function(e) {
      console.log(e.data);
      var item = $('<li>').text(e.data);
      $('#items').append(item);
    }, false);
  };
  $(document).ready(initialize);

</script>